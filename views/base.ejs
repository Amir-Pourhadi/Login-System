<%- include("header") -%>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="fw-2"><%= locals.title ? title : "Login System" %></h2>
      <span>Log in for the existing user</span>
    </div>
    <form action="/route/login" method="POST" class="mt-2">
      <div class="form-group">
        <small class="form-text text-muted text-left">Register Email Address</small>
        <input type="email" name="email" class="form-control" placeholder="Example@mail.com" />
      </div>
      <div class="form-group">
        <small class="form-text text-muted text-left">Enter Your Password</small>
        <input type="password" name="password" class="form-control" placeholder="Strong Password" />
      </div>
      <button type="submit" class="btn btn-success rounded-pill mt-4">Submit</button>
    </form>
  </div>
</div>

<%- include("footer") -%>
